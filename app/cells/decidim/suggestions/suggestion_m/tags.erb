<% if model.hashtag.present? %>
  <%= link_to_if(
    "##{hashtag}",
    "https://twitter.com/hashtag/#{hashtag}",
    class: "card__text--category",
    target: "_blank"
  ) %>
<% end %>

<%#= render partial: "decidim/suggestions/suggestions/tags.html", locals: { resource: model } %>
<ul class="tags tags--suggestion">
  <% model.areas.each do |area| %>
    <li><%= link_to translated_attribute(area.name), suggestions_path(filter: {area_id: [area.id]}) %></li>
  <% end %>
</ul>