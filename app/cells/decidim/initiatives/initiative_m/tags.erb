<% if model.hashtag.present? %>
  <%= link_to_if(
    "##{hashtag}",
    "https://twitter.com/hashtag/#{hashtag}",
    class: "card__text--category",
    target: "_blank"
  ) %>
<% end %>

<%#= render partial: "decidim/initiatives/initiatives/tags.html", locals: { resource: model } %>
<ul class="tags tags--initiative">
  <% if model.area %>
    <li><%= link_to translated_attribute(model.area_name), initiatives_path(filter: { area_id: [model.area.id] }) %></li>
  <% end %>
</ul>
