<% cache [resource, I18n.locale, "areas:#{resource.areas.pluck(:id).join(',')}"] do %>
  <ul class="tags tags--initiative">
    <% resource.areas.each do |area| %>
      <li><%= link_to translated_attribute(area.name), initiatives_path(filter: {area_id: [area.id]}) %></li>
    <% end %>
  </ul>
<% end %>
